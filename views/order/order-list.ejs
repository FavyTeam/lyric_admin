<% include ./layouts/header.ejs %> <% include ./layouts/topnav.ejs %>
<div class="main">
  <div class="container body-container">
    <div class="row">
      <div class="card col-md-12">
        <div class="card-body">
          <% if(errors.length > 0) { %>
          <div class="row mb-3">
            <% errors.forEach(function(error){ %>
            <div class="alert alert-danger col-md-12 alert-dismissible fade show" role="alert">
              <strong>Error!</strong> <%= error %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <% }); %>
          </div>
          <% } %> <% if(success.length > 0) { %>
          <div class="row mb-3">
            <% success.forEach(function(success){ %>
            <div class="alert alert-success col-md-12 alert-dismissible fade show" role="alert">
              <strong id="successMessage">Success!</strong> <%= success %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <% }); %>
          </div>
          <% } %>
          
            <div class="row">
               <% if(list === 'userBased') { %>
                    <table id="user-based-order" user-id="<%= user_id %>" class="table table-striped table-bordered table-responsive-md" style="width:100%">
                <% } else if(list === 'productBased') { %>
                    <table id="product-based-order" product-id="<%= product_id %>" class="table table-striped table-bordered table-responsive-md" style="width:100%">
               <% } else { %>
                    <table id="orderList" class="table table-striped table-bordered table-responsive-md" style="width:100%">
               <% } %>          
                <thead>
                  <tr>
                    <th scope="col">Product Image</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Order By</th>
                    <th scope="col">Product Size</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Invoice Id</th>
                    <th scope="col">Invoice Status</th>
                    <th scope="col">Created Date</th>
                  </tr>
                </thead>              
                </tbody>
              </table>
            </div>
            
        </div>
      </div>
    </div>
  </div>
  <% include ./layouts/inner-footer.ejs %>
</div>
<% include ./layouts/footer.ejs %>
