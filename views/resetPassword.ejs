<% include ./layouts/header.ejs %>
<div class="main">
  <div class="container body-container">
    <div class="card col-md-8 offset-md-2">
      <div class="card-body">
        <% if(error.length > 0) { %>
        <div class="row mb-3">
          <% error.forEach(function(error){ %>
          <div
            class="alert alert-danger col-md-12 alert-dismissible fade show"
            role="alert"
          >
            <strong>Error!</strong> <%= error %>
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% }); %>
        </div>
        <% } %> <% if(success.length > 0) { %>
        <div class="row mb-3">
          <% success.forEach(function(success){ %>
          <div
            class="alert alert-success col-md-12 alert-dismissible fade show"
            role="alert"
          >
            <strong>Success!</strong> <%= success %>
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% }); %>
        </div>
        <% } %>
        <div class="row">
          <div class="col-md-12">
            <h2 class="text-center mb-5">Reset Password</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <form method="post">
              <div class="form-group">
                <label for="newPassword">New Password</label>
                <small
                  class="requiredLable"
                  id="requiredLableBlockForNewPassword"
                  >*</small
                >
                <input
                  type="password"
                  class="form-control"
                  id="newPassword"
                  name="newPassword"
                  aria-describedby="requiredLableBlockForNewPassword"
                />
              </div>
              <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <small
                  class="requiredLable"
                  id="requiredLableBlockForConfirmPassword"
                  >*</small
                >
                <input
                  type="password"
                  class="form-control"
                  id="confirmPassword"
                  name="confirmPassword"
                  aria-describedby="requiredLableBlockForConfirmPassword"
                />
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include ./layouts/inner-footer.ejs %>
</div>
<% include ./layouts/footer.ejs %>
